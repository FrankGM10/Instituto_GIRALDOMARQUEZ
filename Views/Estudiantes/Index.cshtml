@model IEnumerable<Instituto.Models.Estudiante>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEstudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EdadEstudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SexoEstudiante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEstudiante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EdadEstudiante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SexoEstudiante)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstudiante">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstudiante">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstudiante">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
